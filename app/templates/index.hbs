<div class="two-columns">
  <div class="result">

    <h2>LitElement</h2>
    <p class="label"><code>&lt;sample-lit-element&gt;</code></p>
    <ElementEventListener @on-phone-shown={{action 'showToast'}}>
      <sample-lit-element
        class="contact-card"
        vip={{vip}}
        name={{name}}
        email={{email}}
        avatar={{avatar}}
        phone={{phone}}
        phone-visibility-duration={{phoneVisibilityDuration}}
        cats={{catNames}}>
      </sample-lit-element>
    </ElementEventListener>

    <in-app-component
      name="Kus"
      someProp={{dummyObject}}
      onNameChanged={{action 'anotherAction'}}>
    </in-app-component>
  </div>

  <div class="form">
    <fieldset>
      <legend>Data binding (primitives)</legend>

      <FormPropertyField
        @label="Name"
        @value={{name}}>
      </FormPropertyField>

      <FormPropertyField
        @label="Email"
        @value={{email}}>
      </FormPropertyField>

      <FormPropertyField
        @label="Avatar size"
        @type="number"
        @step="10"
        @value={{avatarSize}}>
      </FormPropertyField>

      <FormPropertyField
        @label="Avatar (computed)"
        @value={{avatar}}>
      </FormPropertyField>

      <FormPropertyField
        @label="Phone"
        @value={{phone}}>
      </FormPropertyField>

      <FormPropertyField
        @label="Phone visibility duration"
        @type="number"
        @step="10"
        @value={{phoneVisibilityDuration}}>
      </FormPropertyField>

      <FormPropertyField
        @label="Vip"
        @type="checkbox"
        @value={{vip}}>
      </FormPropertyField>
    </fieldset>

    <fieldset>
      <legend>Data binding (array)</legend>
      <EditableList
        @listButtonLabel="Remove"
        @addButtonLabel="Add"
        @addInputPlaceholder="New cat"
        @items={{cats}}
        @textProperty="name">
      </EditableList>
    </fieldset>
  </div>
</div>